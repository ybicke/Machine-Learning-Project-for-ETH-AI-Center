  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Web Interface",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "ml_project/web_interface",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Module",
      "type": "python",
      "request": "launch",
      "module": "ml_project.reward_model.${fileBasenameNoExtension}",
      "justMyCode": true
    }
  ]
}
